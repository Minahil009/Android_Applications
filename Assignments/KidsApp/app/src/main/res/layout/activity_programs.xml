<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal"
    android:background="#020A37"
    tools:context=".programs">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/titleImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/programs"
                app:layout_constraintEnd_toEndOf="@id/topConstraint"
                app:layout_constraintStart_toStartOf="@id/topConstraint"
                app:layout_constraintTop_toTopOf="@id/topConstraint" />


            <TextView
                android:id="@+id/QalmaTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KIDS PROGRAMS"
                android:textAlignment="center"
                android:textColor="#C6AE66"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/topConstraint"
                app:layout_constraintStart_toStartOf="@id/topConstraint"
                app:layout_constraintTop_toBottomOf="@id/titleImage" />

            <ImageView
                android:id="@+id/headingLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:src="@drawable/l"
                app:layout_constraintEnd_toEndOf="@id/QalmaTitle"
                app:layout_constraintStart_toStartOf="@id/QalmaTitle"
                app:layout_constraintTop_toBottomOf="@id/QalmaTitle" />

            <ImageView
                android:id="@+id/topLeftBorder"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/top_left_border" />

            <ImageView
                android:id="@+id/topRightBorder"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/top_right_border" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/video1"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:onClick="first_video"
            android:src="@drawable/float_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topConstraint"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Float"
            android:onClick="first_video"
            android:textColor="#5A4C21"
            android:textSize="18dp"
            android:background="@drawable/ripple"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/video1"
            app:layout_constraintStart_toStartOf="@+id/video1"
            app:layout_constraintTop_toBottomOf="@id/video1" />

        <ImageView
            android:id="@+id/video2"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:onClick="second_video"
            android:src="@drawable/omar_and_hana"
            app:layout_constraintStart_toStartOf="@id/button1"
            app:layout_constraintEnd_toEndOf="@id/button1"
            app:layout_constraintTop_toBottomOf="@id/button1"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Omar &amp; Hana"
            android:textColor="#5A4C21"
            android:onClick="second_video"
            android:textSize="18dp"
            android:background="@drawable/ripple"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/video2"
            app:layout_constraintStart_toStartOf="@+id/video2"
            app:layout_constraintTop_toBottomOf="@id/video2" />

        <ImageView
            android:id="@+id/video3"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:onClick="Third_video"
            android:src="@drawable/the_wind"
            app:layout_constraintStart_toStartOf="@id/button2"
            app:layout_constraintEnd_toEndOf="@id/button2"
            app:layout_constraintTop_toBottomOf="@id/button2"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wind"
            android:textColor="#5A4C21"
            android:onClick="Third_video"
            android:textSize="18dp"
            android:background="@drawable/ripple"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/video3"
            app:layout_constraintStart_toStartOf="@+id/video3"
            app:layout_constraintTop_toBottomOf="@id/video3" />

        <ImageView
            android:id="@+id/video4"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:onClick="Forth_video"
            android:src="@drawable/the_lie_img"
            app:layout_constraintStart_toStartOf="@id/button3"
            app:layout_constraintEnd_toEndOf="@id/button3"
            app:layout_constraintTop_toBottomOf="@id/button3"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Lie"
            android:textColor="#5A4C21"
            android:onClick="Forth_video"
            android:textSize="18dp"
            android:background="@drawable/ripple"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/video4"
            app:layout_constraintStart_toStartOf="@+id/video4"
            app:layout_constraintTop_toBottomOf="@id/video4" />

        <ImageView
            android:id="@+id/video5"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:onClick="Fifth_video"
            android:src="@drawable/windup"
            app:layout_constraintStart_toStartOf="@id/button4"
            app:layout_constraintEnd_toEndOf="@id/button4"
            app:layout_constraintTop_toBottomOf="@id/button4"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wind Up"
            android:textColor="#5A4C21"
            android:onClick="Fifth_video"
            android:textSize="18dp"
            android:background="@drawable/ripple"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/video5"
            app:layout_constraintStart_toStartOf="@+id/video5"
            app:layout_constraintTop_toBottomOf="@id/video5" />

        <ImageView
            android:id="@+id/video6"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:onClick="Sixth_video"
            android:src="@drawable/umbrella"
            app:layout_constraintStart_toStartOf="@id/button5"
            app:layout_constraintEnd_toEndOf="@id/button5"
            app:layout_constraintTop_toBottomOf="@id/button5"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Umbrella"
            android:textColor="#5A4C21"
            android:onClick="Sixth_video"
            android:textSize="18dp"
            android:background="@drawable/ripple"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/video6"
            app:layout_constraintStart_toStartOf="@+id/video6"
            app:layout_constraintTop_toBottomOf="@id/video6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>