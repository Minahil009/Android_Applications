<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal"
    android:background="#020A37"
    tools:context=".Asma_ul_Husna">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <ImageView
            android:id="@+id/titleImage"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:src="@drawable/title_frame"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asma ul Husna"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#C6AE66"
            app:layout_constraintTop_toTopOf="@id/titleImage"
            app:layout_constraintEnd_toEndOf="@id/titleImage"
            app:layout_constraintStart_toStartOf="@id/titleImage"
            app:layout_constraintBottom_toBottomOf="@id/titleImage"/>
        <VideoView
            android:id="@+id/videoView1"
            android:layout_height="300dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/titleImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>